.flex {
  display: flex;

  &--around {
    justify-content: space-around;
  }

  &--content-center {
    justify-content: center;
  }

  &--center {
    align-items: center;
  }

  &--columns {
    flex-direction: column;
  }

  &--rows {
    flex-direction: row;
  }

  &--wrap {
    flex-wrap: wrap;
  }
}
