a {
  transition: all var(--transition-fast) ease;
  color: var(--color-black);

  @media screen and (max-width: 767px) {
    background-position: 0% 100%;
  }

  &:hover {
    color: var(--color-orange);
  }

  &.--button,
  &.comment-reply-link,
  &#cancel-comment-reply-link {
    color: var(--color-black);
    text-decoration: none;
    background-size: 200% 100%;
    padding: 10px;
    background-image: linear-gradient(to right, var(--color-orange) 0%, var(--color-orange) 49.9999%, var(--color-orange-opaque) 50%, var(--color-orange-opaque) 100%);
    border-radius: 3px;
    background-position: 100% 100%;
    perspective: 1000px;

    &:hover {
      background-position: 0 100%;
      color: var(--color-white);
    }
  }

  &#cancel-comment-reply-link {
    background-image: linear-gradient(to right, var(--color-orange-opaque) 0%, var(--color-orange-opaque) 49.9999%, var(--color-orange) 50%, var(--color-orange) 100%);
    color: var(--color-white);

    &:hover {
      color: var(--color-black);
    }
  }

  .main-header__menu &,
  &.--header {
    text-decoration: none;
    background-position: 100% 100%;
    background-size: 200% 1px;
    background-repeat: no-repeat;
    font-weight: 600;
    background-image: linear-gradient(to right, var(--color-menu) 0%, var(--color-menu) 49.9999%, transparent 50%, transparent 100%);
    color: var(--color-white);

    &:focus,
    &:hover {
      background-position: 0% 100%;
      color: var(--color-menu);
    }
  }

  .current_page_item &,
  .current-menu-item & {
    background-position: 0% 100%;
    color: var(--color-menu);
  }

  .footer__menu &,
  &.--copy {
    color: var(--color-white);
    text-decoration: none;
    font-size: 15px;

    &:hover {
      text-decoration: underline;
    }
  }

  &.--social {
    display: inline-block;
    color: var(--color-social-bar-link);
    width: 24px;
    height: 28px;
    margin: 0 8px;

    &:hover {
      color: var(--color-white);
    }
  }

  .post-header__top &,
  .post-body__entry &,
  .post-content__body &,
  .post-sidebar & {
    color: var(--color-body-link);

    &:hover {
      color: var(--color-light-orange);
    }

    &[href^="http"] {
      margin-left: 25px;
      position: relative;

      &::before {
        content: '';
        background: url(data:image/png;base64,) no-repeat;
        background-size: contain;
        display: block;
        position: absolute;
        width: 12px;
        height: 12px;
        left: -20px;
        top: 50%;
        margin-top: -6px;
        opacity: 0.8;
      }
    }

    &[href*="ceceppa.me"] {
      margin-left: 0;

      &::before {
        display: none !important;
      }
    }
  }
}
