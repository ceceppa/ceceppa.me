.main-header {
  color: var(--color-black);
  z-index: 1;
  padding: 32px 0;

  @media screen and (max-width: 767px) {
    overflow: hidden;
    height: 60px;
    box-sizing: content-box;
    transition: all 0.15s ease;
  }

  #mobile-menu:checked~& {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100vh;
  }

  &__items {
    @media screen and (max-width: 767px) {
      display: block;
    }
  }
}
